@page
@model IndexModel
@{
    ViewData["Title"] = ".NET Pizza Co.";
}

<div class="text-center">
    <h1 class="display-4">Las Temperaturas!</h1>
</div>


<div style="color: #D8000C; background-color: #FFBABA">
  @Model.ErrorMessage
</div> 

<table class="table">
   <thead>
      <tr>
         <th>Fecha</th>
         <th>Temperatura en °C</th>
         <th>Temperatura en °F</th>
         <th>Estado</th>
      </tr>
   </thead>
   <tbody>
      @foreach (var temp in @Model.Pizzas)
      {
         <tr>
            <td>@temp.Date.ToString("yyyy-MM-dd")</td>
            <td>@temp.TemperatureC</td>
            <td>@temp.TemperatureF</td>
            <td>@temp.Summary</td>
         </tr>
      }
   </tbody>
</table>

